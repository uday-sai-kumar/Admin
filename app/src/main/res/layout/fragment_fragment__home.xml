<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/frahome"
    android:layout_height="match_parent">
<ScrollView

    android:layout_height="match_parent"
    android:scrollbars="vertical"
    android:fitsSystemWindows="true"
    android:isScrollContainer="false"
    android:background="#FFFFFF"
    android:layout_width="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context="com.example.udaysaikumar.clgattendance.Fragments.Fragment_Home">

    <!-- TODO: Update blank fragment layout -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/image_semi_circle">
        <ImageView
            android:layout_margin="10dp"
            android:id="@+id/profile_photo"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_gravity="center"
            />
        <ProgressBar
            android:id="@+id/imageProgress"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_gravity="center" />
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ProgressBar
            android:id="@+id/homeprogress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:layout_gravity="center_horizontal|center_vertical"/>
    <LinearLayout
        android:id="@+id/linearprogress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:orientation="vertical">
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:background="#e8eaf6"
    android:theme="@style/Widget.MaterialComponents.CardView"
    android:layout_gravity="center">

    <TextView
        android:id="@+id/appusername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:background="@drawable/custom_textview"
        android:fontFamily="@font/open_sans"
        android:gravity="center"
        android:padding="2dp"
        android:textAlignment="center"
        android:textSize="@dimen/profile"
        android:textStyle="bold" />
</android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:background="#f8bbd0"
        android:theme="@style/Widget.MaterialComponents.CardView"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/appregno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:background="@drawable/custom_textview"
            android:fontFamily="@font/open_sans_light"
            android:gravity="center"
            android:padding="2dp"
            android:textAlignment="center"
            android:textSize="@dimen/profile1"
            android:textStyle="bold" />
    </android.support.v7.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#eeeeee"
        android:orientation="vertical">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            app:cardCornerRadius="7dp">
        <TableLayout
            android:layout_width="match_parent"
            android:id="@+id/basic"
            android:layout_margin="2dp"
            android:layout_height="wrap_content"
            android:stretchColumns="*">
        </TableLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            app:cardCornerRadius="7dp">
        <TableLayout
            android:layout_margin="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btech"
            android:stretchColumns="*">
        </TableLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
    </LinearLayout>
    </FrameLayout>

</LinearLayout>
</ScrollView>
</RelativeLayout>